FROM node:20-alpine AS builder

WORKDIR /app

COPY products.Client/package*.json ./
RUN npm ci --only=production=false

COPY products.Client/ ./
RUN npm run build

FROM nginx:alpine

COPY --from=builder /app/dist/products.client/browser /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
